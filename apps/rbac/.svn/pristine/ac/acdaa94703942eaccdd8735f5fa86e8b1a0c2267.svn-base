<div class="table-titles">
    <button class="btn btn-success addmenus" data-url="{:url('/v1/menus/index/edit', array('module_id'=>$module_id))}"><i
            class="fa fa-plus-circle"></i>添加菜单
    </button>
</div>
<table class="table table-striped table-bordered table-hover" id="dataTables">
    <thead>
    <tr>
        <th class="td-align td-width-50px">ID</th>
        <th class="td-align">标题</th>
        <th class="td-align">图标</th>
        <th class="td-align">请求地址</th>
        <th class="td-align">权重</th>
        <th class="td-align">状态</th>
        <th class="td-align">创建时间</th>
        <!--<th class="td-align">更新时间</th>-->
        <th class="td-align">备注</th>
        <th class="td-align">操作</th>
    </tr>
    </thead>
    <tbody id="scroll_table_head">
    {foreach name='menus' item='vo'}
    <tr>
        <td class="td-align td-padding">{$vo.id}</td>
        <td class="">{$vo.title}</td>
        <td class="td-align td-padding"><i class="{$vo.icon}"></i></td>
        <td class="td-align td-padding">{$vo.url}</td>
        <td class="td-align td-padding">{$vo.weigh}</td>
        {if condition="$vo.status eq 1"}
        <td class="td-align text-success"><i class="fa fa-circle"> 正常</i></td>
        {else/}
        <td class="td-align text-danger"><i class="fa fa-times-circle"> 禁用</i></td>
        {/if}
        <td class="td-align td-paddingtd-padding">{notempty name="vo.createtime"}{$vo.createtime|date="Y-m-d
            H:i:s",###}{/notempty}
        </td>
        <td class="td-align td-padding">{$vo.remark}</td>
        <td class="td-align td-padding">
            <button class="btn btn-primary btn-xs menudetail"
                    data-url="{:url('/v1/menus/index/detail',array('id'=>$vo['id']))}" title="查看节点"><i
                    class="fa fa-sitemap"></i>
            </button>
            &nbsp;&nbsp;
            <button class="btn btn-success btn-xs editmenus"
                    data-url="{:url('/v1/menus/index/edit',array('id'=>$vo['id'],'module_id'=>$module_id))}"
                    title="编辑菜单"><i class="fa fa-pencil"></i>
            </button>
            &nbsp;&nbsp;
            <button class="btn btn-danger btn-xs delmenus" data-url="{:url('/v1/menus/index/del')}" title="删除"
                    data-param="id={$vo['id']}">
                <i class="fa fa-trash"></i></button>
        </td>
    </tr>
    {/foreach}
    </tbody>
</table>
<div class="pages">{$pages ?? ''}</div>