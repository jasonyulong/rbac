<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th class="td-align td-width-40px">
            <input class="data-check_box_total" type="checkbox"/>
        </th>
        <th class="td-align">部门名称</th>
        <th class="td-align">负责人</th>
        <th class="td-align">用户</th>
        <th class="td-align">状态</th>
        <th class="td-align">操作</th>
    </tr>
    </thead>
    <tbody>
    {volist name='list' id='vo'}
        <tr>
            <td class="td-align td-padding">
                <input type="checkbox" name="box_checked" data-id="{$vo.id}" class="data-check_box">
            </td>
            <td class="td-padding td-padding-left-{$vo.rank}0">
                {if condition="$vo['rank'] eq 1"}
                <i class="glyphicon glyphicon-home"></i>
                {/if}
                {$vo.title}
            </td>
            <td class="td-align td-padding">{$vo.manage}</td>
            <td class="td-align td-padding">{$vo.under}</td>
            <td class="td-align td-padding">
                {if condition="$vo['status'] eq 1"}
                    <span class="green-color">已启用</span>
                {else\}
                    <span class="red-color">已禁用</span>
                {/if}
            </td>
            <td class="td-align td-padding">
                {if condition="$vo['status'] eq 1"}
                    <button type="button" class="btn btn-danger btn-sm btn-padding forbid"
                            data-url="{:url('/v1/group/department/forbid')}" data-id="{$vo.id}"><i
                            class="glyphicon glyphicon-remove-circle"></i> 禁用部门
                    </button>
                {else\}
                    <button type="button" class="btn btn-warning btn-sm btn-padding copy"
                            data-url="{:url('/v1/group/department/copy',array('id'=>$vo['id']))}"><i
                            class="glyphicon glyphicon-copy"></i> 复制
                    </button>
                    {if condition="!strtotime($vo['updatetime'])"}
                        <button type="button" class="btn btn-success btn-sm btn-padding start"
                                data-url="{:url('/v1/group/department/start')}" data-id="{$vo.id}"><i
                                class="glyphicon glyphicon-ok-circle"></i> 启用部门
                        </button>
                    {/if}
                {/if}
            </td>
        </tr>
    {/volist}
    </tbody>
</table>