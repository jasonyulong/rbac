<div class="btn-group">
    <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="badge box_total">0</span> 批量操作 <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li><a href="javascript:;" class="batch_forbid" data-url="{:url('/v1/group/organization/forbid')}"><i class="glyphicon glyphicon-remove"></i> 批量禁用</a></li>
    </ul>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th class="td-align td-width-40px">
            <input class="data-check_box_total" type="checkbox"/>
        </th>
        <th class="td-align">姓名</th>
        <th class="td-align">所属小组|部门</th>
        <th class="td-align">账号绑定</th>
        <th class="td-align">状态</th>
        <th class="td-align">操作</th>
    </tr>
    </thead>
    <tbody>
    {volist name="data" id="vo"}
    <tr>
        <td class="td-align td-padding">
            <input type="checkbox" name="box_checked" data-id="{$vo.id}" class="data-check_box">
        </td>
        <td class="td-align td-padding">{$vo.user_name}</td>
        <td class="td-align td-padding">{$vo.title}</td>
        <td class="td-align td-padding">
            {if $vo['binding'] gt 0}
                是
            {else/}
                <span class="red-color">否</span>
            {/if}
        </td>
        <td class="td-align td-padding">
            {if $vo['status'] eq 1}
                <span class="green-color">启用</span>
            {else/}
                <span class="red-color">禁用</span>
            {/if}
        </td>
        <td class="td-align td-padding">
            {if condition="$vo['status'] eq 1"}
            <button type="button" class="btn btn-primary btn-sm btn-padding edit"
                    data-url="{:url('/v1/group/organization/edit',array('id'=>$vo['id']))}"><i
                    class="glyphicon glyphicon-eye-open"></i> 查看
            </button>
            {else/}
            <button type="button" class="btn btn-warning btn-sm btn-padding copy"
                    data-url="{:url('/v1/group/organization/copy',array('id'=>$vo['id']))}"><i
                    class="glyphicon glyphicon-copy"></i> 复制
            </button>
            {/if}
        </td>
    </tr>
    {/volist}
    </tbody>
</table>
<div class="pages">{$page ?? ''}</div>