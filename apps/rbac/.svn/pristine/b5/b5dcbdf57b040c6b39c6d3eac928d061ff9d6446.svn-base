{extend name="$config.layout" /}
{block name='content'}
<div class="dialog-content">
    <table class="table table-striped table-bordered table-hover">
        <tbody>
        {volist name="label" id="vo"}
        {if condition="$vo"}
        <tr>
            <td class="td-align td-padding col-md-3">{if condition="isset($vo[0])"}{$vo[0]}{/if}</td>
            <td class="td-align td-padding col-md-3">{if condition="isset($vo[1])"}{$vo[1]}{/if}</td>
            <td class="td-align td-padding col-md-3">{if condition="isset($vo[2])"}{$vo[2]}{/if}</td>
            <td class="td-align td-padding col-md-3">{if condition="isset($vo[3])"}{$vo[3]}{/if}</td>
        </tr>
        {/if}
        {/volist}
        </tbody>
    </table>
</div>
{/block}
