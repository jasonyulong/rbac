.page-header{padding-bottom: 10px;padding-top: 3px}
.table-bordered>thead>tr>th{
  border-bottom-width: 1px;
}
.h3-auth{font-size: 10px}
.td-padding-left-30{padding-left:20px!important;}
.td-padding-left-40{padding-left:30px!important;}
.td-padding-left-50{padding-left:40px!important;}
.td-padding-left-60{padding-left:50px!important;}
.td-padding-left-70{padding-left:60px!important;}
.btn-padding{padding: 3px 10px}
#tag-bottom-br{width: 110%;margin-left: -5%;margin-top: 140px}
.batch-bottom{margin-bottom: 10px}
.a-show{text-decoration:none!important;cursor:pointer!important;;color: blue!important;}
.tag-content{padding: 20px}


.menu-content {padding-left: 0px;}
.menu-content .nav-curstom {margin-top:0px;}
.panel-heading {
  padding: 8px 15px;
  border-bottom: 1px solid transparent;
}

.badge {
  background-color: inherit;
}
.level1-rule{
  padding: 10px;
}
.level2-rule{
  padding: 5px 10px;
}
.level3-rule{
  padding: 5px 20px !important;
}
.level4-rule{
  padding: 0 20px;
}
.level4-rule label{
  padding: 0 10px;
  font-weight: 100;
}
.level4-rule label:not(.form-check-label):not(.custom-file-label) {
  font-weight: 100;
}
.scroll-to{
  min-width: 160px;
  position: fixed;
  right: 0;
  top: 171px;
  z-index: 9999;
  line-height: 45px;
  background-color: white;
  border-radius: 5px;
}
.scroll-to * {
  padding: 0;
  margin: 0;
  line-height: 30px;
}
.scroll-to svg{
  color: #337ab7;
}
.scroll-to a {
  text-decoration: none;
  padding-left: 10px;
}
.save-div {
  position: fixed;
  right: 8%;
  bottom: 50px;
}
.save-div button{
  width: 150px;
  position: absolute;
  right: 30px;
}
#default_form{
  margin-bottom: 20px;
}
.quick-set{
  padding: 8px 0px 0px 0px;
  margin: 0;
  background-color: #f5f5f5;
}
.other-rule label{min-width: 180px;}
.other-rule label:not(.form-check-label):not(.custom-file-label) {
  font-weight: 100;
}
.list-group-item-link{
  display: block;
  padding: 0 20px;
}
.item-selected a {
  color: #337ab7;
  font-weight: bold;
}
.platform-nav {
  display: block;
  padding: 0;
  margin-top: 10px;
  border-bottom: 1px solid #ddd;
}
.platform-nav li a {
  text-decoration: none;
  padding: 5px 0;
  padding-right: 6px;
  display: inline-block;
}
.platform-nav li:hover
{
  background-color: #eeeeee;
}
.platform-nav li.active
{
  background-color: #337ab7;
}
.platform-nav li.active a,a:hover
{
  color: #ffffff;
}
.platform-nav:after {
  clear: both;
  content: "";
  display: block;
}
.platform-nav li {
  float: left;
  padding: 3px 8px;
  border-radius: 5px 5px 0 0;
}